<%= form_for(@user,:url => user_profile_path, :html => {:multipart => true}) do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :placeholder => t('.first_name') %></div>

    <%= f.label :last_name %>
    <%= f.text_field :last_name, :placeholder => t('.last_name') %>
  <div style="font-weight: bold;">
    <%= f.label :thread_name %>
    <%= f.text_field :thread_name, :placeholder => t('.thread_name') %></div>
  <div>
    <%= f.label :sex %>
    <%= f.select :sex, ([['-NO SEX-', 1], ['men', 2], ['women', 3]]) %></div>
  <div>
    <%= f.label :birthday %>
    <%= f.text_field :birthday %></div>
  <div>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %></div>
  <div>
    <%= f.label :country %>
    <%= f.country_select :country, {priority: %w(UA RU BY)}, prompt: 'Please select a country' %></div>
  <div>
    <%= f.label :time_zone %>
    <%= f.time_zone_select :time_zone %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.telephone_field :phone %>
  </div>
  <div>
    <%= f.label :phone_secondary %>
    <%= f.telephone_field :phone_secondary %>
  </div>
      <%= image_tag @user.avatar.url(:medium) %>
      <span class="btn btn-success fileinput-button">
          <i class="icon-plus icon-white"></i>
          <span><%= t('.avatar') %></span>
          <%= f.file_field :avatar %>
      </span>
  </div>
  <br>
  <div>
    <%= f.submit t('.save'), class: "btn" %>
  </div>
<% end %>
