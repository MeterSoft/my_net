<%= form_for(@user,:url => user_profile_path, :html => {:multipart => true}) do |f| %>
  <div>
    <%= f.label t('.first_name') %>
    <%= f.text_field :first_name, :placeholder => t('.first_name') %></div>

    <%= f.label t('.last_name') %>
    <%= f.text_field :last_name, :placeholder => t('.last_name') %>
  <div style="font-weight: bold;">
    <%= f.label t('.thread_name') %>
    <%= f.text_field :thread_name, :placeholder => t('.thread_name') %></div>
  <div>
    <%= f.label t('.sex') %>
    <%= f.select :sex, ([['- - -', 1], [t('.sex_params_2'), 2], [t('.sex_params_3'), 3]]) %></div>
  <div>
    <%= f.label t('.birthday_lable') %>
    <%= f.text_field :birthday, :placeholder => t('.birthday') %></div>
  <div>
    <%= f.label t('.zip_code') %>
    <%= f.text_field :zip_code, :placeholder => t('.zip_code') %></div>
  <div>
    <%= f.label t('.country') %>
    <%= f.country_select :country, {priority: %w(UA RU BY)}, prompt: 'Please select a country' %></div>
  <div>
    <%= f.label t('.time_zone') %>
    <%= f.time_zone_select :time_zone %>
  </div>
  <div>
    <%= f.label t('.city') %>
    <%= f.text_field :city, :placeholder => t('.city') %>
  </div>
  <div>
    <%= f.label t('.address_lable') %>
    <%= f.text_field :address, :placeholder => t('.address') %>
  </div>
  <div>
    <%= f.label t('.phone') %>
    <%= f.telephone_field :phone, :placeholder => t('.phone') %>
  </div>
  <div>
    <%= f.label t('.phone_secondary') %>
    <%= f.telephone_field :phone_secondary, :placeholder => t('.phone') %>
  </div>
      <%= image_tag @user.avatar.url(:medium) %>
      <span class="btn btn-success fileinput-button">
          <i class="icon-plus icon-white"></i>
          <span><%= t('.avatar') %></span>
          <%= f.file_field :avatar %>
      </span>
  </div>
  <br>
  <div>
    <%= f.submit t('.save'), class: "btn" %>
  </div>
<% end %>
