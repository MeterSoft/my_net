- if @users
  ul.scrolling
    - @users.each do |u|
      li.message
        .row-fluid
          .span2
            = image_tag(u.avatar.url(:thumb), :class => "img-polaroid")
          .span7
            p
              = u.full_name
            - if u.status == 'online'
              p.online
                = u.status
            - else
              p.offline
                = u.status

          .span3
            input type="button" class="btn btn-inverse" value="Add to friend"
            = link_to "Send message", new_message_path(:user_id => u.id),  :class => "btn btn-inverse"
- else
  span
    | This user is not found