<h1 class="top_login">
  <%= t('.registration') %>
</h1>
<div class="mlogin">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <div><%= devise_error_messages! %></div>

      <div><%= f.email_field :email, :placeholder => t('.email') %></div><br>

      <div><%= f.password_field :password, :placeholder => t('.password') %></div><br>

      <div><%= f.password_field :password_confirmation, :placeholder => t('.password') %></div><br>

      <div><%= f.text_field :first_name, :placeholder => t('.first_name') %></div><br>

      <div><%= f.text_field :last_name, :placeholder => t('.last_name') %></div><br>

      <div><%= f.text_field :thread_name, :placeholder => t('.thread_name') %></div><br>

      <div>
        <%= f.submit t('.sign_up'), :class => "btn" %>
      </div>
    <% end %>
</div>
