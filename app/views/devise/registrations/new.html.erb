<p class="top_login">
  Registration
</p>
<div class="mlogin">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <div><%= devise_error_messages! %></div>

      <div><%= f.email_field :email, :placeholder => 'Email' %></div><br>

      <div><%= f.password_field :password, :placeholder => 'Password' %></div><br>

      <div><%= f.password_field :password_confirmation, :placeholder => 'Password' %></div><br>

      <div><%= f.text_field :first_name, :placeholder => 'first name' %></div><br>

      <div><%= f.text_field :last_name, :placeholder => 'last name' %></div><br>

      <div>
        <%= f.submit "Sign up", :class => "btn" %>
      </div>
    <% end %>
</div>
<p class="futer-login">
  <%= link_to "Sign in", new_session_path(resource_name)%>
</p>


